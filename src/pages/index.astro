---
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/ui/Button.astro';
import BentoCard from '../components/ui/BentoCard.astro';
import SectionHeader from '../components/ui/SectionHeader.astro';

import logoKambista from '../assets/images/logos/kambista.svg';
import logoFlip from '../assets/images/logos/flip.svg';
import logoMgw from '../assets/images/logos/mgw.svg';

import bookFormula from '../assets/images/books/la-formula-para-emprender.webp';
import bookDistraccion from '../assets/images/books/el-arte-de-la-distraccion.webp';
---

<BaseLayout
  title="Daniel Bonifaz"
  description="Emprendedor serial peruano. CEO de Kambista, autor de bestsellers, speaker TEDx. Construyendo un ecosistema de empresas que transforman Latinoamérica."
>
  <!-- Bento Grid Hub -->
  <section class="mx-auto max-w-7xl px-4 py-8 md:px-6 md:py-12">
    <div class="bento-grid grid grid-cols-2 gap-3 md:grid-cols-4 md:gap-4">

      <!-- Intro — card principal, 3 cols x 2 rows (incluye "Visto en") -->
      <BentoCard variant="default" size="xl" span="col-span-2 row-span-2 md:col-span-3" id="intro">
        <div>
          <p class="text-sm font-medium text-accent">Emprendedor serial · Autor · Speaker</p>
          <h1 class="mt-3 text-3xl font-bold leading-tight tracking-tight text-brand-50 md:text-5xl lg:text-6xl">
            Transformando ideas en empresas que impactan Latinoamérica
          </h1>
          <p class="mt-4 max-w-xl text-base text-brand-300">
            CEO de Kambista · Autor · Speaker TEDx · +500K comunidad
          </p>
          <div class="mt-6 flex flex-col gap-3 md:flex-row md:flex-wrap">
            <Button href="#newsletter" variant="primary" size="md" class="w-full md:w-auto">Suscríbete al newsletter</Button>
            <Button href="#ecosistema" variant="secondary" size="md" class="w-full md:w-auto">Conoce el ecosistema</Button>
          </div>
        </div>
        <!-- Visto en — dentro del intro -->
        <div class="mt-8 flex flex-wrap items-center gap-2 border-t border-brand-700/50 pt-6 md:gap-4">
          <span class="text-xs uppercase tracking-wider text-brand-500">Visto en</span>
          <span class="text-xs font-medium text-brand-400 md:text-sm">Forbes</span>
          <span class="text-xs font-medium text-brand-400 md:text-sm">Bloomberg</span>
          <span class="text-xs font-medium text-brand-400 md:text-sm">TEDx</span>
          <span class="text-xs font-medium text-brand-400 md:text-sm">El Comercio</span>
          <span class="text-xs font-medium text-brand-400 md:text-sm">Gestión</span>
        </div>
      </BentoCard>

      <!-- Foto + Redes — 1 col x 2 rows -->
      <BentoCard variant="photo" span="col-span-2 md:col-span-1 md:row-span-2" class="min-h-[280px] md:min-h-0">
        <!-- Foto — flotante, centrada en todo el card, fuera del flow -->
        <img
          src="/images/daniel-bonifaz-perfil.jpg"
          alt="Daniel Bonifaz"
          class="absolute inset-0 h-full w-full object-cover"
        />
        <!-- Redes — en el flow, w-full del content area (padre maneja spacing con padding) -->
        <div class="relative z-10 flex items-center justify-around gap-3 rounded-2xl bg-brand-900/80 p-3 md:gap-4 md:p-4">
          <a href="https://instagram.com/danielbonifazz" target="_blank" rel="noopener noreferrer" aria-label="Instagram" class="text-brand-400 transition-colors hover:text-brand-50">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-5 w-5"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 1 0 0 12.324 6.162 6.162 0 0 0 0-12.324zM12 16a4 4 0 1 1 0-8 4 4 0 0 1 0 8zm6.406-11.845a1.44 1.44 0 1 0 0 2.881 1.44 1.44 0 0 0 0-2.881z"/></svg>
          </a>
          <a href="https://www.linkedin.com/in/daniel-bonifaz-zegarra-b762757a/" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" class="text-brand-400 transition-colors hover:text-brand-50">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-5 w-5"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
          <a href="https://www.youtube.com/@danielbonifazz" target="_blank" rel="noopener noreferrer" aria-label="YouTube" class="text-brand-400 transition-colors hover:text-brand-50">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-5 w-5"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
          </a>
          <a href="https://www.tiktok.com/@danielbonifazz" target="_blank" rel="noopener noreferrer" aria-label="TikTok" class="text-brand-400 transition-colors hover:text-brand-50">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-5 w-5"><path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/></svg>
          </a>
          <a href="https://x.com/danielbonifazz" target="_blank" rel="noopener noreferrer" aria-label="X (Twitter)" class="text-brand-400 transition-colors hover:text-brand-50">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-5 w-5"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
          </a>
        </div>
      </BentoCard>

      <!-- Stats — 4 cards individuales -->
      <BentoCard variant="stat">
        <p class="text-2xl font-bold text-brand-50 md:text-3xl">+500K</p>
        <p class="mt-1 text-xs text-brand-400">Comunidad</p>
      </BentoCard>
      <BentoCard variant="stat">
        <p class="text-2xl font-bold text-brand-50 md:text-3xl">3</p>
        <p class="mt-1 text-xs text-brand-400">Empresas fundadas</p>
      </BentoCard>
      <BentoCard variant="stat">
        <p class="text-2xl font-bold text-brand-50 md:text-3xl">2</p>
        <p class="mt-1 text-xs text-brand-400">Libros publicados</p>
      </BentoCard>
      <BentoCard variant="stat">
        <p class="text-2xl font-bold text-brand-50 md:text-3xl">$1B+</p>
        <p class="mt-1 text-xs text-brand-400">Transacciones</p>
      </BentoCard>

      <!-- Ecosystem — 2 cols x 2 rows -->
      <BentoCard span="col-span-2 row-span-2" id="ecosistema">
        <div>
          <SectionHeader
            label="Empresas"
            title="Lo que he construido"
            description="Fintech, inversiones y productividad. Empresas que transforman Latinoamérica."
          />
          <div class="mt-6 inline-grid grid-cols-2 gap-3 md:grid-cols-3 md:gap-4">
            <div class="flex flex-col gap-2">
              <span class="text-xs text-brand-400">Fintech</span>
              <a href="https://kambista.com" target="_blank" rel="noopener noreferrer" data-empresa="kambista" class="grid place-items-center rounded-inner bg-brand-700/50 px-3 py-2 transition-colors hover:bg-brand-700/70 md:px-4 md:py-3">
                <Image src={logoKambista} alt="Kambista" class="h-6 w-auto md:h-8" />
              </a>
            </div>
            <div class="flex flex-col gap-2">
              <span class="text-xs text-brand-400">Inversiones</span>
              <a href="https://flipinversiones.com" target="_blank" rel="noopener noreferrer" data-empresa="flip" class="grid place-items-center rounded-inner bg-brand-700/50 px-3 py-2 transition-colors hover:bg-brand-700/70 md:px-4 md:py-3">
                <Image src={logoFlip} alt="Flip" class="h-6 w-auto md:h-8" />
              </a>
            </div>
            <div class="flex flex-col gap-2">
              <span class="text-xs text-brand-400">Productividad</span>
              <a href="https://mygoodweek.com" target="_blank" rel="noopener noreferrer" data-empresa="mgw" class="grid place-items-center rounded-inner bg-brand-700/50 px-3 py-2 transition-colors hover:bg-brand-700/70 md:px-4 md:py-3">
                <Image src={logoMgw} alt="MyGoodWeek" class="h-6 w-auto md:h-8" />
              </a>
            </div>
          </div>
          <div id="empresa-detail" class="mt-6 hidden min-h-[3rem] opacity-0 transition-opacity duration-200 md:block">
            <p id="empresa-role" class="text-sm font-medium text-brand-200"></p>
            <p id="empresa-desc" class="mt-1 text-xs text-brand-400"></p>
          </div>
        </div>
        <script>
          const empresas: Record<string, { role: string; desc: string }> = {
            kambista: { role: 'Founder & CEO', desc: 'Casa de cambio digital líder en Perú.' },
            flip: { role: 'Co-founder', desc: 'Plataforma de inversiones alternativas.' },
            mgw: { role: 'Founder', desc: 'App de productividad y bienestar.' },
          };
          const detail = document.getElementById('empresa-detail')!;
          const roleEl = document.getElementById('empresa-role')!;
          const descEl = document.getElementById('empresa-desc')!;

          document.querySelectorAll<HTMLAnchorElement>('[data-empresa]').forEach((link) => {
            link.addEventListener('mouseenter', () => {
              const data = empresas[link.dataset.empresa!];
              roleEl.textContent = data.role;
              descEl.textContent = data.desc;
              detail.classList.replace('opacity-0', 'opacity-100');
            });
            link.addEventListener('mouseleave', () => {
              detail.classList.replace('opacity-100', 'opacity-0');
            });
          });
        </script>
      </BentoCard>

      <!-- Books — 2 cols x 2 rows -->
      <BentoCard span="col-span-2 row-span-2" id="libros">
        <SectionHeader
          label="Libros"
          title="Autor bestseller"
          description="Lecciones de emprendimiento destiladas en libros prácticos."
        />
        <div class="book-marquee mt-6">
          <div class="book-marquee-content">
            <a href="https://www.google.com/search?q=La+F%C3%B3rmula+para+Emprender+Daniel+Bonifaz+comprar" target="_blank" rel="noopener noreferrer" class="shrink-0"><Image src={bookFormula} alt="La Fórmula para Emprender" class="h-40 w-auto rounded-lg" /></a>
            <a href="https://www.google.com/search?q=El+Arte+de+la+Distracci%C3%B3n+Daniel+Bonifaz+comprar" target="_blank" rel="noopener noreferrer" class="shrink-0"><Image src={bookDistraccion} alt="El Arte de la Distracción" class="h-40 w-auto rounded-lg" /></a>
          </div>
          <div class="book-marquee-content" aria-hidden="true">
            <a href="https://www.google.com/search?q=La+F%C3%B3rmula+para+Emprender+Daniel+Bonifaz+comprar" target="_blank" rel="noopener noreferrer" tabindex="-1" class="shrink-0"><Image src={bookFormula} alt="La Fórmula para Emprender" class="h-40 w-auto rounded-lg" /></a>
            <a href="https://www.google.com/search?q=El+Arte+de+la+Distracci%C3%B3n+Daniel+Bonifaz+comprar" target="_blank" rel="noopener noreferrer" tabindex="-1" class="shrink-0"><Image src={bookDistraccion} alt="El Arte de la Distracción" class="h-40 w-auto rounded-lg" /></a>
          </div>
          <div class="book-marquee-content" aria-hidden="true">
            <a href="https://www.google.com/search?q=La+F%C3%B3rmula+para+Emprender+Daniel+Bonifaz+comprar" target="_blank" rel="noopener noreferrer" tabindex="-1" class="shrink-0"><Image src={bookFormula} alt="La Fórmula para Emprender" class="h-40 w-auto rounded-lg" /></a>
            <a href="https://www.google.com/search?q=El+Arte+de+la+Distracci%C3%B3n+Daniel+Bonifaz+comprar" target="_blank" rel="noopener noreferrer" tabindex="-1" class="shrink-0"><Image src={bookDistraccion} alt="El Arte de la Distracción" class="h-40 w-auto rounded-lg" /></a>
          </div>
          <div class="book-marquee-content" aria-hidden="true">
            <a href="https://www.google.com/search?q=La+F%C3%B3rmula+para+Emprender+Daniel+Bonifaz+comprar" target="_blank" rel="noopener noreferrer" tabindex="-1" class="shrink-0"><Image src={bookFormula} alt="La Fórmula para Emprender" class="h-40 w-auto rounded-lg" /></a>
            <a href="https://www.google.com/search?q=El+Arte+de+la+Distracci%C3%B3n+Daniel+Bonifaz+comprar" target="_blank" rel="noopener noreferrer" tabindex="-1" class="shrink-0"><Image src={bookDistraccion} alt="El Arte de la Distracción" class="h-40 w-auto rounded-lg" /></a>
          </div>
        </div>
      </BentoCard>

      <!-- Podcast + Speaking — 3 cols compartidas -->
      <div class="col-span-2 md:col-span-3 grid grid-cols-1 gap-3 md:grid-cols-2 md:gap-4">
        <BentoCard size="md" id="contenido">
          <SectionHeader
            label="Podcast"
            title="Emprendebroders"
            titleSize="xl"
            description="Daniel y Diego hablan como broders sobre negocios, emprendimiento e inversiones."
          />
          <a href="https://open.spotify.com/show/5b0fX3uibiUdvzBfOOg95K" target="_blank" rel="noopener noreferrer" class="mt-4 flex items-center gap-3 transition-colors group">
            <div class="h-12 w-12 shrink-0 rounded-xl bg-[#1DB954]/10 grid place-items-center transition-colors group-hover:bg-[#1DB954]/20">
              <svg class="h-5 w-5 text-[#1DB954]" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-brand-200 group-hover:text-brand-50 transition-colors">Escuchar en Spotify</p>
              <p class="text-xs text-brand-500">4.8 ★ · 868 ratings</p>
            </div>
          </a>
        </BentoCard>

        <BentoCard size="md" id="speaking">
          <SectionHeader
            label="Speaking"
            title="TEDx Speaker"
            titleSize="xl"
            description="Conferencias sobre innovación y emprendimiento."
          />
          <div class="mt-4 flex flex-col gap-2">
            <a href="https://www.youtube.com/watch?v=71aa8Wh22ew" target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 group">
              <div class="h-10 w-10 shrink-0 rounded-lg bg-red-500/10 grid place-items-center transition-colors group-hover:bg-red-500/20">
                <svg class="h-4 w-4 text-red-500" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814z"/>
                  <path d="M9.545 15.568V8.432L15.818 12l-6.273 3.568z" fill="#fff"/>
                </svg>
              </div>
              <p class="text-xs text-brand-300 group-hover:text-brand-50 transition-colors">Hacerte amigo del fracaso</p>
            </a>
            <a href="https://www.youtube.com/watch?v=beSPp_SOuh4" target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 group">
              <div class="h-10 w-10 shrink-0 rounded-lg bg-red-500/10 grid place-items-center transition-colors group-hover:bg-red-500/20">
                <svg class="h-4 w-4 text-red-500" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814z"/>
                  <path d="M9.545 15.568V8.432L15.818 12l-6.273 3.568z" fill="#fff"/>
                </svg>
              </div>
              <p class="text-xs text-brand-300 group-hover:text-brand-50 transition-colors">Cada uno tiene su propio reloj</p>
            </a>
          </div>
        </BentoCard>
      </div>

      <!-- Newsletter CTA — 1 col -->
      <BentoCard variant="accent" span="col-span-2 md:col-span-1" id="newsletter">
        <SectionHeader
          label="Newsletter"
          title="Bizz"
          titleSize="xl"
          description="Consejos de negocios, historias y tendencias cada semana."
        />
        <p class="mt-3 text-xs text-accent-dark">+13,000 suscriptores</p>
        <a href="https://bizzla.substack.com/" target="_blank" rel="noopener noreferrer" class="mt-3 inline-flex rounded-full bg-accent px-6 py-2.5 text-sm font-semibold text-brand-900 transition-colors hover:bg-accent-light">
          Suscribirme
        </a>
      </BentoCard>

    </div>
  </section>
</BaseLayout>
