---
import { getEntry } from 'astro:content';
import Button from '../ui/Button.astro';

const personalData = await getEntry('site', 'personal');
const data = personalData!.data;
---

<section id="hero" class="relative overflow-hidden">
  <div class="mx-auto grid max-w-7xl gap-10 px-6 py-20 md:grid-cols-2 md:items-center md:py-32 lg:py-40">
    <!-- Text content -->
    <div class="flex flex-col gap-6">
      <h1 class="text-4xl font-bold leading-tight tracking-tight text-brand-50 md:text-5xl lg:text-6xl">
        {data.tagline}
      </h1>

      <p class="text-lg text-brand-300">
        {data.roles.join(' · ')}
      </p>

      <div class="flex flex-wrap gap-4">
        <Button href="#newsletter" variant="primary" size="lg">
          Suscríbete al newsletter
        </Button>
        <Button href="#ecosistema" variant="secondary" size="lg">
          Conoce el ecosistema
        </Button>
      </div>

      <!-- Credibility logos -->
      <div class="mt-4 flex flex-wrap items-center gap-6">
        <span class="text-xs uppercase tracking-wider text-brand-500">Visto en</span>
        {data.credibilityLogos.map((logo: string) => (
          <span class="text-sm font-medium text-brand-500">{logo}</span>
        ))}
      </div>
    </div>

    <!-- Hero image placeholder -->
    <div class="flex items-center justify-center">
      <div class="aspect-[3/4] w-full max-w-md rounded-2xl bg-brand-800 flex items-center justify-center">
        <div class="text-center text-brand-500">
          <svg class="mx-auto h-16 w-16 mb-3" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
          </svg>
          <p class="text-sm">Foto de Daniel</p>
          <p class="text-xs">(placeholder)</p>
        </div>
      </div>
    </div>
  </div>
</section>
