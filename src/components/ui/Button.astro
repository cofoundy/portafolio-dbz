---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const {
  href,
  variant = 'primary',
  size = 'md',
  class: className = '',
} = Astro.props;

const Tag = href ? 'a' : 'button';

const baseClasses = 'inline-flex items-center justify-center rounded-full font-semibold transition-colors focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent';

const variantClasses: Record<string, string> = {
  primary: 'bg-accent text-brand-900 hover:bg-accent-light',
  secondary: 'border border-brand-600 text-brand-100 hover:border-brand-400 hover:text-white',
  ghost: 'text-brand-300 hover:text-brand-50 hover:bg-brand-800',
};

const sizeClasses: Record<string, string> = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-sm',
  lg: 'px-8 py-4 text-base',
};

const classes = [baseClasses, variantClasses[variant], sizeClasses[size], className].join(' ');
---

<Tag href={href} class={classes}>
  <slot />
</Tag>
