---
import { getEntry } from 'astro:content';
import SocialIcon from '../ui/SocialIcon.astro';

const personalData = await getEntry('site', 'personal');
const navData = await getEntry('site', 'navigation');

const socialLinks = personalData?.data.socialLinks ?? [];
const navItems = navData?.data.items ?? [];
const currentYear = new Date().getFullYear();
---

<footer class="border-t border-brand-800 bg-brand-900">
  <div class="mx-auto max-w-7xl px-6 py-12">
    <div class="grid gap-8 md:grid-cols-3">
      <!-- Brand -->
      <div>
        <a href="/" class="text-lg font-bold text-brand-50">Daniel Bonifaz</a>
        <p class="mt-3 text-sm text-brand-400">
          Emprendedor serial. Construyendo empresas que transforman Latinoamérica.
        </p>
      </div>

      <!-- Links rápidos -->
      <div>
        <h3 class="mb-3 text-sm font-semibold uppercase tracking-wider text-brand-300">Navegación</h3>
        <ul class="flex flex-col gap-2">
          {navItems.map((item: { label: string; href: string }) => (
            <li>
              <a href={item.href} class="text-sm text-brand-400 transition-colors hover:text-brand-50">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Redes sociales -->
      <div>
        <h3 class="mb-3 text-sm font-semibold uppercase tracking-wider text-brand-300">Sígueme</h3>
        <div class="flex gap-1">
          {socialLinks.map((link: { platform: string; url: string; label: string }) => (
            <SocialIcon
              platform={link.platform}
              url={link.url}
              label={link.label}
            />
          ))}
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-10 border-t border-brand-800 pt-6 text-center text-xs text-brand-500">
      <p>&copy; {currentYear} Daniel Bonifaz. Todos los derechos reservados.</p>
    </div>
  </div>
</footer>
